{
   "name": "copy-file-util",
   "version": "0.1.4",
   "description": "Copy or rename a file with optional package version number (CLI tool designed for use in npm scripts)",
   "license": "MIT",
   "type": "module",
   "module": "dist/copy-file.js",
   "main": "dist/copy-file.umd.cjs",
   "types": "dist/copy-file.d.ts",
   "files": [
      "dist"
   ],
   "exports": {
      ".": {
         "import": "./dist/copy-file.js",
         "require": "./dist/copy-file.umd.cjs"
      },
      "./": "./dist/"
   },
   "bin": {
      "copy-file": "bin/cli.js",
      "copy-file-util": "bin/cli.js"
   },
   "repository": "github:center-key/copy-file-util",
   "homepage": "https://github.com/center-key/copy-file-util",
   "bugs": "https://github.com/center-key/copy-file-util/issues",
   "docs": "https://github.com/center-key/copy-file-util#readme",
   "author": "Center Key (https://centerkey.com)",
   "keywords": [
      "cli",
      "copy",
      "cp",
      "file",
      "rename",
      "scripts"
   ],
   "jshintConfig": {
      "esversion": 11,
      "strict": "implied",
      "eqeqeq": true,
      "undef": true,
      "unused": true,
      "varstmt": true,
      "node": true,
      "mocha": true
   },
   "eslintConfig": {
      "ignorePatterns": [
         "build",
         "dist",
         "node_modules"
      ],
      "root": true,
      "parser": "@typescript-eslint/parser",
      "plugins": [
         "@typescript-eslint"
      ],
      "extends": [
         "eslint:recommended",
         "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
         "@typescript-eslint/no-non-null-assertion": "off"
      }
   },
   "scripts": {
      "step:01": "rimraf build dist spec/fixtures/target **/.DS_Store",
      "step:02": "jshint . --exclude-path .gitignore",
      "step:03": "eslint --max-warnings 0 . --ext .ts",
      "step:10": "tsc",
      "step:11": "tsc --module UMD --outDir build/umd",
      "step:12": "cpy build/umd/copy-file.js build --rename=copy-file.umd.cjs --flat=true",
      "step:20": "add-dist-header build dist",
      "pretest": "npm-run-all step:*",
      "test": "mocha spec/*.spec.js"
   },
   "dependencies": {
      "chalk": "~5.1",
      "dna-engine": "~2.2",
      "fancy-log": "~2.0",
      "slash": "~5.0"
   },
   "devDependencies": {
      "@types/fancy-log": "~2.0",
      "@types/node": "~18.8",
      "@typescript-eslint/eslint-plugin": "~5.40",
      "@typescript-eslint/parser": "~5.40",
      "add-dist-header": "~0.3",
      "assert-deep-strict-equal": "~1.0",
      "cpy-cli": "~4.2",
      "eslint": "~8.25",
      "jshint": "~2.13",
      "mocha": "~10.0",
      "npm-run-all2": "~6.0",
      "rimraf": "~3.0",
      "typescript": "~4.8"
   }
}
